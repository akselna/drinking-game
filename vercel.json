{
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node",
      "config": { "runtime": "nodejs18.x" }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
